---
interface FormData {
    firstName: string;
    lastName: string;
    phone: string;
    email: string;
    interests: string[];
    brandAmbassador: string;
}
---
<section id="contact" class="section" aria-labelledby="contact-title">
    <div class="container">
        <h2 id="contact-title" class="animated-title">Let's Thrive Together</h2>
        <div class="contact-card">
            <div class="contact-content">
                <h3 class="contact-heading">Ready to Transform Your Leadership?</h3>
                <p class="contact-description">Take the first step towards extraordinary results. Fill out the form below to get started.</p>
                
                <form id="contactForm" class="contact-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="firstName">First Name</label>
                            <input type="text" id="firstName" name="firstName" required>
                        </div>
                        <div class="form-group">
                            <label for="lastName">Last Name</label>
                            <input type="text" id="lastName" name="lastName" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="phone">Phone</label>
                            <input type="tel" id="phone" name="phone" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>How can we drive THRIVING results for you? (Select all that apply)</label>
                        <div class="checkbox-group">
                            <label class="checkbox-label">
                                <input type="checkbox" name="interests" value="Become a Partner">
                                Become a Partner
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="interests" value="Become an Affiliate">
                                Become an Affiliate
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="interests" value="Request Service">
                                Request Service
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="interests" value="More Information">
                                More Information
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="interests" value="Schedule Us to Speak">
                                Schedule Us to Speak
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="interests" value="Schedule Training">
                                Schedule Training
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="interests" value="Schedule Meeting">
                                Schedule Meeting
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="interests" value="Work With Us - Consulting Services">
                                Work With Us - Consulting Services
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Brand Ambassador Services</label>
                        <div class="radio-group">
                            <label class="radio-label">
                                <input type="radio" name="brandAmbassador" value="Yes" required>
                                Yes, I want to hire DAY 41 Thrive as my brand ambassador
                            </label>
                            <label class="radio-label">
                                <input type="radio" name="brandAmbassador" value="No" required>
                                No, not interested in brand ambassador services
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="btn submit-btn">Send Message</button>
                </form>

                <div class="alternative-contact">
                    <p>Or contact us directly:</p>
                    <div class="contact-methods">
                        <a href="tel:877-DAY-41ME" class="contact-link" aria-label="Call us">
                            <span class="icon">ðŸ“ž</span>
                            <span class="text">877-DAY-41ME</span>
                        </a>
                        <a href="mailto:hello@day41thrive.com" class="contact-link" aria-label="Email us">
                            <span class="icon">ðŸ“§</span>
                            <span class="text">hello@day41thrive.com</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const form = document.getElementById('contactForm') as HTMLFormElement;
    
    form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        const formData = new FormData(form);
        const interests = formData.getAll('interests');
        const brandAmbassador = formData.get('brandAmbassador');
        
        const subject = encodeURIComponent('New Contact Form Submission - Day 41 Thrive');
        const body = encodeURIComponent(`
Dear Day 41 Thrive Team,

A new contact form submission has been received with the following details:

Contact Information:
------------------
First Name: ${formData.get('firstName')}
Last Name: ${formData.get('lastName')}
Phone: ${formData.get('phone')}
Email: ${formData.get('email')}

Areas of Interest:
----------------
${interests.length > 0 ? interests.map(interest => `â€¢ ${interest}`).join('\n') : 'â€¢ No specific interests selected'}

Brand Ambassador Program:
----------------------
Interest in Brand Ambassador Services: ${brandAmbassador === 'Yes' ? 'Yes, interested in hiring Day 41 Thrive as brand ambassador' : 'No, not interested at this time'}

Additional Information:
--------------------
Submission Date: ${new Date().toLocaleString()}
Source: Website Contact Form

I look forward to hearing back from the Day 41 Thrive team about my inquiry.

Best regards,
${formData.get('firstName')} ${formData.get('lastName')}
`);
        
        window.location.href = `mailto:hello@day41thrive.com?subject=${subject}&body=${body}`;
    });
</script>

<style>
    .contact-card {
        background: var(--card-bg);
        border-radius: 1rem;
        border: 1px solid var(--primary);
        max-width: 800px;
        margin: 0 auto;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .contact-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 4px 20px rgba(255, 20, 147, 0.2);
    }

    .contact-content {
        padding: 2.5rem;
    }

    .contact-heading {
        color: var(--primary);
        font-size: clamp(1.5rem, 3vw, 2rem);
        margin-bottom: 1rem;
        text-align: center;
    }

    .contact-description {
        color: var(--text);
        font-size: clamp(1rem, 1.5vw, 1.1rem);
        line-height: 1.6;
        text-align: center;
        margin-bottom: 2rem;
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .form-row {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    label {
        color: var(--text);
        font-size: 0.9rem;
        font-weight: 600;
    }

    input[type="text"],
    input[type="tel"],
    input[type="email"] {
        padding: 0.75rem;
        border: 1px solid rgba(255, 20, 147, 0.2);
        border-radius: 0.25rem;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

    input[type="text"]:focus,
    input[type="tel"]:focus,
    input[type="email"]:focus {
        border-color: var(--primary);
        outline: none;
    }

    .checkbox-group,
    .radio-group {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .checkbox-label,
    .radio-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
        font-weight: normal;
    }

    input[type="checkbox"],
    input[type="radio"] {
        accent-color: var(--primary);
        width: 1.25rem;
        height: 1.25rem;
        cursor: pointer;
    }

    .submit-btn {
        width: 100%;
        margin-top: 1rem;
    }

    .alternative-contact {
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 20, 147, 0.2);
        text-align: center;
    }

    .contact-methods {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 1rem;
    }

    .contact-link {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.75rem;
        color: var(--text);
        text-decoration: none;
        border-radius: 0.25rem;
        transition: all 0.3s ease;
        background: rgba(255, 20, 147, 0.1);
    }

    .contact-link:hover {
        background: rgba(255, 20, 147, 0.2);
        transform: translateX(4px);
    }

    .icon {
        font-size: 1.2rem;
    }

    @media (max-width: 768px) {
        .contact-content {
            padding: 1.5rem;
        }

        .form-row {
            grid-template-columns: 1fr;
        }

        .contact-methods {
            gap: 0.75rem;
        }
    }

    @media (min-width: 769px) and (max-width: 1024px) {
        .contact-content {
            padding: 2rem;
        }
        
        .checkbox-group {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 0.75rem;
        }
    }
</style>