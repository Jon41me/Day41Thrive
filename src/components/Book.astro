        content: '';
        position: absolute;
        left: 50%;
        right: 50%;
        bottom: -2px;
        height: 2px;
        background: var(--primary);
        transform: scaleX(0);
        transition: all 0.3s ease;
    }
    .animated-title:hover::after {
        left: 25%;
        right: 25%;
        transform: scaleX(1);
    }
    @keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(255, 20, 147, 0.4);
        }
        70% {
