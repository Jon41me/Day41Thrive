---
import DesktopNav from './navigation/DesktopNav.astro';
import MobileNav from './navigation/MobileNav.astro';
---
<header class="header">
    <div class="container">
        <nav class="nav-container">
            <a href="/" class="logo">
                <span class="logo-text">Day 41 Thrive</span>
            </a>
            <DesktopNav />
            <button 
                class="mobile-menu-btn" 
                id="mobileMenuBtn"
                aria-label="Toggle menu" 
                aria-expanded="false" 
                aria-controls="mobileNavOverlay"
            >
                <span class="menu-line"></span>
                <span class="menu-line"></span>
                <span class="menu-line"></span>
            </button>
        </nav>
    </div>
    <MobileNav />
</header>

<style>
    .header {
        background-color: var(--header-bg);
        padding: 0.75rem 0;
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        box-shadow: 0 2px 12px rgba(255,20,147,0.3);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
    }

    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 60px;
    }

    .logo {
        display: flex;
        align-items: center;
        text-decoration: none;
        transition: transform 0.3s ease;
        z-index: 1001;
    }

    .logo:hover {
        transform: translateY(-2px);
    }

    .logo-text {
        font-size: clamp(1.25rem, 2vw, 1.5rem);
        font-weight: 700;
        color: white;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: color 0.3s ease;
    }

    .logo-text:hover {
        color: var(--primary);
    }

    .mobile-menu-btn {
        display: none;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 44px;
        height: 44px;
        background: none;
        border: none;
        cursor: pointer;
        padding: 8px;
        z-index: 1001;
        position: relative;
    }

    .menu-line {
        display: block;
        width: 24px;
        height: 2px;
        background-color: white;
        transition: all 0.3s ease;
        position: absolute;
    }

    .menu-line:nth-child(1) {
        transform: translateY(-8px);
    }

    .menu-line:nth-child(3) {
        transform: translateY(8px);
    }

    .mobile-menu-btn.active .menu-line:nth-child(1) {
        transform: rotate(45deg);
    }

    .mobile-menu-btn.active .menu-line:nth-child(2) {
        opacity: 0;
    }

    .mobile-menu-btn.active .menu-line:nth-child(3) {
        transform: rotate(-45deg);
    }

    @media (max-width: 768px) {
        .mobile-menu-btn {
            display: flex;
        }

        .nav-container {
            height: 50px;
        }
    }

    @media (hover: hover) {
        .mobile-menu-btn:hover .menu-line {
            background-color: var(--primary);
        }
    }
</style>

<script>
    import { setupMobileMenu } from '../utils/mobileMenu';
    setupMobileMenu();
</script>