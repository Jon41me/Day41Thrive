---
<section class="podcast-grid section">
    <div class="container">
        <div class="grid-section">
            <h2 class="animated-title">Recent Episodes</h2>
            <div class="podcast-list">
                {recentPodcasts.map(podcast => (
                    <div class="podcast-card">
                        <h3>{podcast.title}</h3>
                        <p class="date">{podcast.date}</p>
                        <p class="description">{podcast.description}</p>
                        <a href={podcast.link} class="btn" target="_blank" rel="noopener noreferrer">
                            Listen Now
                        </a>
                    </div>
                ))}
            </div>
        </div>

        <div class="grid-section">
            <h2 class="animated-title">Most Popular Episodes</h2>
            <div class="podcast-list">
                {popularPodcasts.map(podcast => (
                    <div class="podcast-card">
                        <h3>{podcast.title}</h3>
                        <p class="date">{podcast.date}</p>
                        <p class="description">{podcast.description}</p>
                        <a href={podcast.link} class="btn" target="_blank" rel="noopener noreferrer">
                            Listen Now
                        </a>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>

<style>
    .animated-title {
        display: inline-block;
        position: relative;
        transition: transform 0.3s ease;
        text-align: center;
        width: 100%;
        margin-bottom: 2rem;
    }
    .animated-title:hover {
        transform: scale(1.05);
        color: var(--primary);
        animation: pulse 1.5s infinite;
    }
    .animated-title::after {
        content: '';
        position: absolute;
        left: 50%;
        right: 50%;
        bottom: -2px;
        height: 2px;
        background: var(--primary);
        transform: scaleX(0);
        transition: all 0.3s ease;
    }
    .animated-title:hover::after {
        left: 25%;
        right: 25%;
        transform: scaleX(1);
    }
    @keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(255, 20, 147, 0.4);
        }
        70% {
            box-shadow: 0 0 0 10px rgba(255, 20, 147, 0);
        }
        100% {
            box-shadow: 0 0 0 0 rgba(255, 20, 147, 0);
        }
    }
    .grid-section {
        margin-bottom: 4rem;
    }
    .podcast-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }
    .podcast-card {
        background: var(--card-bg);
        padding: 1.5rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        transition: transform 0.3s ease;
    }
    .podcast-card:hover {
        transform: translateY(-4px);
    }
    .date {
        color: var(--primary);
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }
    .description {
        color: var(--text);
        margin-bottom: 1.5rem;
        font-size: 0.95rem;
    }
</style>