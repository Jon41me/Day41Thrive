<style>
    .cta-section {
        text-align: center;
        max-width: 800px;
        margin: 2rem auto;
        padding: 2.5rem;
        background: var(--card-bg);
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        transition: transform 0.3s ease;
    }
    .cta-section:hover {
        transform: translateY(-4px);
    }
    .animated-title {
        display: inline-block;
        position: relative;
        transition: transform 0.3s ease;
        text-align: center;
        width: 100%;
        margin-bottom: 2rem;
        font-size: clamp(1.5rem, 2.5vw, 2rem);
    }
    .animated-title:hover {
        transform: scale(1.05);
        color: var(--primary);
        animation: pulse 1.5s infinite;
    }
    .animated-title::after {
        content: '';
        position: absolute;
        left: 50%;
        right: 50%;
        bottom: -2px;
        height: 2px;
        background: var(--primary);
        transform: scaleX(0);
        transition: all 0.3s ease;
    }
    .animated-title:hover::after {
        left: 25%;
        right: 25%;
        transform: scaleX(1);
    }
    @keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(255, 20, 147, 0.4);
        }
        70% {
            box-shadow: 0 0 0 10px rgba(255, 20, 147, 0);
        }
        100% {
            box-shadow: 0 0 0 0 rgba(255, 20, 147, 0);
        }
    }
    .cta-description {
        font-size: 1.1rem;
        color: var(--text);
        margin: 1.5rem 0;
        line-height: 1.6;
    }
    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin: 2rem 0;
        align-items: center;
    }
    .contact-link {
        color: var(--primary);
        text-decoration: none;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
    }
    .contact-link:hover {
        color: var(--secondary);
        transform: translateY(-2px);
    }
    .icon {
        font-size: 1.4rem;
    }
    .founder-links {
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid var(--primary);
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .founder-link {
        color: var(--text);
        text-decoration: none;
        font-size: 1.2rem;
        transition: color 0.3s ease;
        padding: 0.5rem;
    }
    .founder-link:hover {
        color: var(--primary);
    }
    .closing {
        margin-top: 2rem;
        font-size: 1.4rem;
        color: var(--primary);
        font-weight: bold;
        margin-bottom: 0;
    }

    @media (max-width: 768px) {
        .cta-section {
            padding: 1.5rem;
            margin: 1rem auto;
        }
        .contact-link {
            font-size: 1rem;
        }
        .founder-link {
            font-size: 1.1rem;
        }
        .closing {
            font-size: 1.2rem;
        }
    }
</style>