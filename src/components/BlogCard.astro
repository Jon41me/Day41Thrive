---
interface Props {
    title: string;
    date: string;
    author: string;
    description: string;
    slug: string;
}

const { title, date, author, description, slug } = Astro.props;
---
<article class="blog-card">
    <div class="card-content">
        <h3 class="title"><a href={`/blog/${encodeURIComponent(slug)}`}>{title}</a></h3>
        <div class="meta">
            <span class="date">{date}</span>
            <span class="author">{author}</span>
        </div>
        <p class="description">{description}</p>
        <a href={`/blog/${encodeURIComponent(slug)}`} class="read-more">Read More â†’</a>
    </div>
</article>

<style>
    .blog-card {
        background: var(--card-bg);
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        transition: transform 0.3s ease;
        height: 100%;
        display: flex;
    }

    .blog-card:hover {
        transform: translateY(-4px);
    }

    .card-content {
        padding: clamp(1.25rem, 3vw, 1.5rem);
        display: flex;
        flex-direction: column;
        height: 100%;
        width: 100%;
    }

    .title {
        font-size: clamp(1.25rem, 2vw, 1.5rem);
        margin-bottom: clamp(0.75rem, 2vh, 1rem);
        line-height: 1.3;
    }

    .title a {
        color: var(--primary);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .title a:hover {
        color: var(--secondary);
    }

    .meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1rem;
        font-size: clamp(0.85rem, 1.5vw, 0.9rem);
        color: var(--text);
        opacity: 0.8;
    }

    .description {
        color: var(--text);
        margin-bottom: 1.5rem;
        flex-grow: 1;
        font-size: clamp(0.9rem, 1.5vw, 1rem);
        line-height: 1.6;
    }

    .read-more {
        color: var(--primary);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
        font-size: clamp(0.9rem, 1.5vw, 1rem);
        margin-top: auto;
    }

    .read-more:hover {
        color: var(--secondary);
    }

    /* Touch device optimization */
    @media (hover: none) {
        .blog-card:hover {
            transform: none;
        }
    }
</style>