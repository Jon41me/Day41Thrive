</Layout>

<style>
    .brand-ambassador-page {
        padding-top: 80px;
    }

    .hero {
        position: relative;
        background-image: url('/storm-bg.jpg');
        background-size: cover;
        background-position: center;
        min-height: 50vh;
        display: flex;
        align-items: center;
        padding: 8rem 0 4rem;
    }

    .gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(0,0,0,0.95) 0%, rgba(255,20,147,0.3) 100%);
        z-index: 1;
    }

    .container {
        position: relative;
        z-index: 2;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .animated-title {
        color: white;
        font-size: clamp(2rem, 5vw, 3.5rem);
        text-align: center;
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .hero-description {
        color: white;
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
        font-size: clamp(1rem, 1.5vw, 1.25rem);
        line-height: 1.6;
    }

    section {
        padding: 4rem 0;
    }

    h2 {
        color: var(--primary);
        font-size: clamp(1.5rem, 3vw, 2rem);
        margin-bottom: 2rem;
        text-align: center;
    }

    .benefits-grid {
        display: grid;
        gap: 1.5rem;
    }

    .benefit-card {
        background: var(--card-bg);
        padding: 1.5rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        transition: transform 0.3s ease;
    }

    .benefit-card:hover {
        transform: translateY(-4px);
    }

    .goal-card,
    .speaking-card {
        background: var(--card-bg);
        padding: 2.5rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        max-width: 800px;
        margin: 0 auto;
    }

    .contract-note,
    .pricing-note,
    .booking-note {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-top: 2rem;
        padding: 1rem;
        background: rgba(255, 20, 147, 0.1);
        border-radius: 0.5rem;
    }

    .icon {
        font-size: 1.5rem;
    }

    .speaking-intro {
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .topics-list {
        list-style: none;
        padding: 0;
        margin: 2rem 0;
    }

    .topics-list li {
        margin-bottom: 1rem;
        padding-left: 1.5rem;
        position: relative;
    }

    .topics-list li::before {
        content: "â€¢";
        color: var(--primary);
        position: absolute;
        left: 0;
    }

    .cta-section {
        text-align: center;
        background: rgba(255, 20, 147, 0.05);
    }

    .cta-section p {
        margin-bottom: 2rem;
    }

    @media (min-width: 768px) {
        .benefits-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .benefits-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (max-width: 767px) {
        .goal-card,
        .speaking-card {
            padding: 1.5rem;
            margin: 0 1rem;
        }

        .contract-note,
        .pricing-note,
        .booking-note {
            flex-direction: column;
            text-align: center;
        }
    }
</style>