---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import FloatingActionButton from '../../components/FloatingActionButton.astro';

const trainingPrograms = [
    {
        title: "Leadership and Owner Training",
        description: "Take your leadership skills to the next level with training designed specifically for business owners and executives."
    },
    {
        title: "Kind, True, Helpful Communication",
        description: "Learn to communicate with intention using our proven framework for clear, respectful, and efficient team interactions."
    },
    {
        title: "Customer Conflict Resolution",
        description: "Master proven techniques to handle customer concerns and turn challenges into opportunities."
    },
    {
        title: "Employee Accountability",
        description: "Implement structured evaluation methods that drive employee growth while maintaining fairness."
    },
    {
        title: "Empowering Decision-Making",
        description: "Build trust and reduce micromanagement by empowering your team to make informed decisions."
    },
    {
        title: "AEP Model Implementation",
        description: "Evaluate team members based on Attitude, Effort, and Performance for measurable accountability."
    }
];

const benefits = [
    "Build stronger, more accountable teams that require less oversight.",
    "Improve communication and conflict resolution skills.",
    "Foster a positive work culture where employees take ownership.",
    "Create clear expectations and measurable performance standards.",
    "Develop confident leaders who can grow with your business."
];
---

<Layout title="Beyond 41 – Because thriving starts on Day 41 and never stops. - Day 41 Thrive">
    <Header />
    <main class="program-page">
        <section class="hero">
            <div class="gradient-overlay"></div>
            <div class="container">
                <h1 class="animated-title">Beyond 41 – Because thriving starts on Day 41 and never stops.</h1>
                <p class="hero-description">Elevate Your Leadership: Build a High-Performance Team</p>
            </div>
        </section>

        <section class="intro-section">
            <div class="container">
                <div class="intro-card">
                    <h2>Explore Our Programs</h2>
                    <p>At DAY 41 THRIVE, we believe that great leadership is the foundation of any successful business. Whether you're a business owner, executive, or team leader, effective leadership is the key to growth, accountability, and long-term success.</p>
                </div>
            </div>
        </section>

        <section class="programs-section">
            <div class="container">
                <h2>Our Leadership Training Programs</h2>
                <p class="section-intro">We offer a comprehensive leadership development approach that focuses on building strong, self-sufficient teams while fostering a culture of accountability, clarity, and growth.</p>
                
                <div class="programs-grid">
                    {trainingPrograms.map(program => (
                        <div class="program-card">
                            <h3>{program.title}</h3>
                            <p>{program.description}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <section class="benefits-section">
            <div class="container">
                <h2>Why Choose DAY 41 THRIVE Leadership Consulting?</h2>
                <div class="benefits-grid">
                    {benefits.map(benefit => (
                        <div class="benefit-card">
                            <p>{benefit}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <section class="cta-section">
            <div class="container">
                <h2>Ready to Elevate Your Leadership?</h2>
                <p>Our customized leadership consulting programs are designed to fit the unique challenges of your business.</p>
                <a href="mailto:hello@day41thrive.com" class="btn">Start Your Leadership Journey</a>
            </div>
        </section>
    </main>
    <FloatingActionButton />
</Layout>

<style>
    .program-page {
        padding-top: 80px;
    }

    .hero {
        position: relative;
        background-image: url('/storm-bg.jpg');
        background-size: cover;
        background-position: center;
        min-height: 50vh;
        display: flex;
        align-items: center;
        padding: 8rem 0 4rem;
    }

    .gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(0,0,0,0.95) 0%, rgba(255,20,147,0.3) 100%);
        z-index: 1;
    }

    .container {
        position: relative;
        z-index: 2;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .animated-title {
        color: white;
        font-size: clamp(2rem, 5vw, 3.5rem);
        text-align: center;
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .hero-description {
        color: white;
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
        font-size: clamp(1rem, 1.5vw, 1.25rem);
        line-height: 1.6;
    }

    section {
        padding: 4rem 0;
    }

    .intro-card {
        background: var(--card-bg);
        padding: 2.5rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        max-width: 800px;
        margin: 0 auto;
    }

    h2 {
        color: var(--primary);
        font-size: clamp(1.5rem, 3vw, 2rem);
        margin-bottom: 2rem;
        text-align: center;
    }

    .section-intro {
        text-align: center;
        max-width: 800px;
        margin: 0 auto 3rem;
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .programs-grid {
        display: grid;
        gap: 2rem;
    }

    .program-card {
        background: var(--card-bg);
        padding: 2rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        transition: transform 0.3s ease;
    }

    .program-card:hover {
        transform: translateY(-4px);
    }

    .program-card h3 {
        color: var(--primary);
        font-size: 1.25rem;
        margin-bottom: 1rem;
    }

    .benefits-grid {
        display: grid;
        gap: 1.5rem;
        max-width: 800px;
        margin: 0 auto;
    }

    .benefit-card {
        background: var(--card-bg);
        padding: 1.5rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        transition: transform 0.3s ease;
    }

    .benefit-card:hover {
        transform: translateY(-4px);
    }

    .cta-section {
        text-align: center;
        background: rgba(255, 20, 147, 0.05);
    }

    .cta-section p {
        margin-bottom: 2rem;
    }

    @media (min-width: 768px) {
        .programs-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .benefits-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .programs-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (max-width: 767px) {
        .intro-card,
        .program-card,
        .benefit-card {
            padding: 1.5rem;
        }
    }
</style>