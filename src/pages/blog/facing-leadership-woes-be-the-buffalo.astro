    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .post-header {
        margin-bottom: 2rem;
        text-align: center;
    }

    h1 {
        color: var(--primary);
        font-size: clamp(2rem, 4vw, 3rem);
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .post-meta {
        display: flex;
        justify-content: center;
        gap: 1rem;
        color: var(--text);
        opacity: 0.8;
    }

    .post-content {
        color: var(--text);
        line-height: 1.8;
    }

