<style>
    .know-grow-page {
        padding-top: 80px;
    }

    .hero {
        position: relative;
        background-image: url('/storm-bg.jpg');
        background-size: cover;
        background-position: center;
        min-height: 50vh;
        display: flex;
        align-items: center;
        padding: 8rem 0 4rem;
    }

    .gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(0,0,0,0.95) 0%, rgba(255,20,147,0.3) 100%);
        z-index: 1;
    }

    .container {
        position: relative;
        z-index: 2;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .animated-title {
        color: white;
        font-size: clamp(2rem, 5vw, 3.5rem);
        text-align: center;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .hero-description {
        color: white;
        text-align: center;
        font-size: clamp(1.25rem, 2.5vw, 1.75rem);
        margin-bottom: 1rem;
    }

    .tagline {
        color: var(--primary);
        text-align: center;
        font-size: clamp(1.1rem, 2vw, 1.25rem);
        font-style: italic;
    }

    section {
        padding: 4rem 0;
    }

    .intro-card {
        background: var(--card-bg);
        padding: 2.5rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        max-width: 1000px;
        margin: 0 auto;
    }

    h2 {
        color: var(--primary);
        font-size: clamp(1.5rem, 3vw, 2rem);
        margin-bottom: 2rem;
        text-align: center;
    }

    .corners-grid {
        display: grid;
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .corner-item {
        background: rgba(255, 20, 147, 0.1);
        padding: 1.5rem;
        border-radius: 0.5rem;
        transition: transform 0.3s ease;
    }

    .corner-item:hover {
        transform: translateY(-4px);
    }

    .emoji {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        display: block;
    }

    .step-cards {
        display: grid;
        gap: 2rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    .step-card {
        background: var(--card-bg);
        padding: 2rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
    }

    .options {
        margin: 1rem 0;
        padding: 1rem;
        background: rgba(255, 20, 147, 0.1);
        border-radius: 0.5rem;
    }

    .deliverables-grid {
        display: grid;
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .deliverable-card {
        background: var(--card-bg);
        padding: 1.5rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        transition: transform 0.3s ease;
    }

    .deliverable-card:hover {
        transform: translateY(-4px);
    }

    .ideal-client-card {
        background: var(--card-bg);
        padding: 2.5rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        max-width: 800px;
        margin: 0 auto;
    }

    .checkmark-list {
        list-style: none;
        padding: 0;
        margin-top: 1.5rem;
    }

    .checkmark-list li {
        margin-bottom: 0.75rem;
        padding-left: 2rem;
        position: relative;
    }

    .checkmark-list li::before {
        content: "âœ…";
        position: absolute;
        left: 0;
    }

    .investment-card {
        background: var(--card-bg);
        padding: 2.5rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
    }

    .ready {
        margin: 2rem 0;
        font-size: 1.25rem;
        color: var(--primary);
        font-weight: 600;
    }

    @media (min-width: 768px) {
        .corners-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .deliverables-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .corners-grid {
            grid-template-columns: repeat(4, 1fr);
        }

        .deliverables-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (max-width: 767px) {
        .intro-card,
        .step-card,
        .ideal-client-card,
        .investment-card {
            padding: 1.5rem;
            margin: 0 1rem;
        }

        .deliverable-card {
            padding: 1rem;
        }
    }
</style>