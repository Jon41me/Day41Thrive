<style>
    .thrivers-page {
        padding-top: 80px;
    }

    .hero {
        position: relative;
        background-image: url('/storm-bg.jpg');
        background-size: cover;
        background-position: center;
        min-height: 50vh;
        display: flex;
        align-items: center;
        padding: 8rem 0 4rem;
    }

    .gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(0,0,0,0.95) 0%, rgba(255,20,147,0.3) 100%);
        z-index: 1;
    }

    .container {
        position: relative;
        z-index: 2;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .animated-title {
        color: white;
        font-size: clamp(2rem, 5vw, 3.5rem);
        text-align: center;
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .hero-description {
        color: white;
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
        font-size: clamp(1.1rem, 2vw, 1.25rem);
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    .hero-subtitle {
        color: white;
        text-align: center;
        max-width: 800px;
        margin: 0 auto 2rem;
        font-size: clamp(1rem, 1.5vw, 1.1rem);
        line-height: 1.6;
    }

    .hero-cta {
        text-align: center;
        margin-top: 2rem;
    }

    .cta-text {
        color: var(--primary);
        font-size: clamp(1.25rem, 2.5vw, 1.5rem);
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .cta-subtext {
        color: white;
        font-size: clamp(1rem, 2vw, 1.25rem);
    }

    .testimonials-section {
        padding: 4rem 0;
    }

    .testimonials-grid {
        display: grid;
        gap: 2rem;
    }

    .testimonial-card {
        background: var(--card-bg);
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .testimonial-card:hover {
        transform: translateY(-4px);
    }

    .video-container {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 aspect ratio */
        height: 0;
        overflow: hidden;
    }

    .video-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
    }

    .testimonial-content {
        padding: 1.5rem;
    }

    .testimonial-content h3 {
        color: var(--primary);
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .title {
        color: var(--secondary);
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .company {
        color: var(--text);
        font-style: italic;
        margin-bottom: 1rem;
    }

    .description {
        color: var(--text);
        line-height: 1.6;
    }

    .cta-section {
        padding: 4rem 0;
        background: rgba(255, 20, 147, 0.05);
    }

    .cta-card {
        background: var(--card-bg);
        padding: 2.5rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
    }

    .cta-card h2 {
        color: var(--primary);
        font-size: clamp(1.5rem, 3vw, 2rem);
        margin-bottom: 1rem;
    }

    .cta-card p {
        margin-bottom: 1.5rem;
    }

    @media (min-width: 768px) {
        .testimonials-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .testimonials-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (max-width: 767px) {
        .testimonial-content {
            padding: 1rem;
        }

        .cta-card {
            margin: 0 1rem;
            padding: 1.5rem;
        }
    }
</style>