---

<Layout title="Partners - Day 41 Thrive">
    <Header />
    <main class="partners-page">
        <section class="hero">
            <div class="gradient-overlay"></div>
            <div class="container">
                <h1 class="animated-title">Partners & Affiliates</h1>
                <p class="hero-description">Join our growing network of industry leaders and innovators who are transforming the future of business together.</p>
            </div>
        </section>

        <section class="partners-section">
            <div class="container">
                <div class="partners-grid">
                    {partners.map(partner => (
                        <div class="partner-card">
                            <h3>{partner.name}</h3>
                            <p>{partner.description}</p>
                            {partner.status === 'active' ? (
                                <a href={partner.link} class="btn" target="_blank" rel="noopener noreferrer">
                                    Learn More
                                </a>
                            ) : (
                                <span class="coming-soon">Coming Soon</span>
                            )}
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <section class="cta-section">
            <div class="container">
                <h2>Become a Partner</h2>
                <p>Interested in joining our network of industry leaders? Contact us to learn more about partnership opportunities.</p>
                <a href="/#contact" class="btn">Contact Us</a>
            </div>
        </section>
    </main>
    <FloatingActionButton />
</Layout>

<style>
    .partners-page {
        padding-top: 80px;
    }

    .hero {
        position: relative;
        background-image: url('/storm-bg.jpg');
        background-size: cover;
        background-position: center;
        min-height: 50vh;
        display: flex;
        align-items: center;
        padding: 8rem 0 4rem;
    }

    .gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(0,0,0,0.95) 0%, rgba(255,20,147,0.3) 100%);
        z-index: 1;
    }

    .container {
        position: relative;
        z-index: 2;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .animated-title {
        color: white;
        font-size: clamp(2rem, 5vw, 3.5rem);
        text-align: center;
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .hero-description {
        color: white;
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
        font-size: clamp(1rem, 1.5vw, 1.25rem);
        line-height: 1.6;
    }

    section {
        padding: 4rem 0;
    }

    .partners-grid {
        display: grid;
        gap: 2rem;
    }

    .partner-card {
        background: var(--card-bg);
        padding: 2rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        transition: transform 0.3s ease;
    }

    .partner-card:hover {
        transform: translateY(-4px);
    }

    .partner-card h3 {
        color: var(--primary);
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .partner-card p {
        margin-bottom: 1.5rem;
        flex-grow: 1;
        line-height: 1.6;
    }

    .coming-soon {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background: rgba(255, 20, 147, 0.1);
        color: var(--primary);
        border-radius: 0.25rem;
        font-weight: 600;
        text-align: center;
    }

    .cta-section {
        text-align: center;
        background: rgba(255, 20, 147, 0.05);
    }

    .cta-section h2 {
        color: var(--primary);
        font-size: clamp(1.5rem, 3vw, 2rem);
        margin-bottom: 2rem;
    }

    .cta-section p {
        margin-bottom: 2rem;
    }

    @media (min-width: 768px) {
        .partners-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .partners-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (max-width: 767px) {
        .partner-card {
            padding: 1.5rem;
        }
    }
</style>