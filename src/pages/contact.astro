---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import FloatingActionButton from '../components/FloatingActionButton.astro';
---

<Layout title="Contact Us - Day 41 Thrive">
    <Header />
    <main class="contact-page">
        <section class="hero">
            <div class="gradient-overlay"></div>
            <div class="container">
                <h1 class="animated-title">Let's Thrive Together</h1>
                <p class="hero-description">Ready to transform your leadership and business? Reach out to us today and take the first step towards extraordinary results.</p>
            </div>
        </section>

        <section class="contact-section">
            <div class="container">
                <div class="contact-options">
                    <div class="contact-card">
                        <h2>Contact Us Directly</h2>
                        <div class="contact-methods">
                            <a href="tel:877-329-4163" class="contact-link">
                                <span class="icon">ðŸ“ž</span>
                                <span class="text">877-DAY-41-ME</span>
                            </a>
                            <a href="mailto:hello@day41thrive.com" class="contact-link">
                                <span class="icon">ðŸ“§</span>
                                <span class="text">hello@day41thrive.com</span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="form-container">
                    <iframe 
                        src="https://app.hellobonsai.com/f/863fcba0283093e?embed=true" 
                        frameborder="0" 
                        width="100%" 
                        height="100%" 
                        style="border: none;">
                    </iframe>
                </div>
            </div>
        </section>
    </main>
    <FloatingActionButton />
</Layout>

<style>
    .contact-page {
        padding-top: 80px;
    }

    .hero {
        position: relative;
        background-image: url('/storm-bg.jpg');
        background-size: cover;
        background-position: center;
        min-height: 40vh;
        display: flex;
        align-items: center;
        padding: 8rem 0 4rem;
    }

    .gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(0,0,0,0.95) 0%, rgba(255,20,147,0.3) 100%);
        z-index: 1;
    }

    .container {
        position: relative;
        z-index: 2;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .animated-title {
        color: white;
        font-size: clamp(2rem, 5vw, 3.5rem);
        text-align: center;
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .hero-description {
        color: white;
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
        font-size: clamp(1rem, 1.5vw, 1.25rem);
        line-height: 1.6;
    }

    .contact-section {
        padding: 2rem 0;
        min-height: calc(100vh - 80px - 40vh);
        display: flex;
        flex-direction: column;
    }

    .contact-options {
        max-width: 1000px;
        margin: 0 auto 2rem;
    }

    .contact-card {
        background: var(--card-bg);
        padding: 2rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        text-align: center;
    }

    .contact-card h2 {
        color: var(--primary);
        font-size: clamp(1.5rem, 3vw, 2rem);
        margin-bottom: 1.5rem;
    }

    .contact-methods {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
    }

    .contact-link {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem 2rem;
        background: rgba(255, 20, 147, 0.1);
        border-radius: 0.5rem;
        text-decoration: none;
        color: var(--text);
        transition: all 0.3s ease;
        width: fit-content;
    }

    .contact-link:hover {
        transform: translateY(-2px);
        background: rgba(255, 20, 147, 0.2);
        color: var(--primary);
    }

    .icon {
        font-size: 1.5rem;
    }

    .text {
        font-size: 1.2rem;
        font-weight: 600;
    }

    .form-container {
        max-width: 1000px;
        margin: 0 auto;
        background: var(--card-bg);
        padding: 2rem;
        border-radius: 0.5rem;
        border: 1px solid var(--primary);
        flex: 1;
        min-height: 800px;
        position: relative;
    }

    .form-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 0.5rem;
    }

    @media (max-width: 768px) {
        .hero {
            min-height: 30vh;
            padding: 6rem 0 3rem;
        }

        .contact-section {
            min-height: calc(100vh - 80px - 30vh);
            padding: 1rem 0;
        }

        .contact-card {
            padding: 1.5rem;
            margin: 0 1rem;
        }

        .contact-link {
            padding: 0.75rem 1.5rem;
            width: 100%;
            justify-content: center;
        }

        .form-container {
            padding: 1rem;
            margin: 0 1rem;
            min-height: 600px;
        }
    }
</style>